---
import { formatDate } from '../utils/formatDate';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { title, date } = post.data;
const formattedDate = formatDate(date);
const urlDate = date.toISOString().split('T')[0].replace(/-/g, '-');
const fileName = `${urlDate}_${post.slug.replace(/\//g, '-')}.md`;

// Get first 150 characters of post body as excerpt
const { remarkPluginFrontmatter } = await post.render();
const excerpt = remarkPluginFrontmatter.excerpt || post.body.slice(0, 150) + '...';
---

<div class="post">
  <div class="post-content-wrapper">
    <div class="post-title">
      <a href={`/blog/${post.slug}`} class="title-link">- {title}</a>
    </div>
    <div class="post-date">ðŸ“… {formattedDate}</div>
    <div class="post-content">
      {excerpt}
    </div>
    <div class="post-link">
      cat {fileName} <span class="arrow">â†’</span>
      <a href={`/blog/${post.slug}`} class="read-link">Read</a>
    </div>
  </div>
</div>

<style>
  .post {
    margin-bottom: 30px;
    border-bottom: 1px solid var(--border-color);
    padding-bottom: 20px;
    position: relative;
  }
  
  .post:last-child {
    border-bottom: none;
  }
  
  .post-content-wrapper {
    position: relative;
    padding-left: 10px;
    border-left: 1px solid var(--terminal-green);
    opacity: 0.8;
  }
  
  .post-title {
    font-weight: 800;
    margin-bottom: 8px;
    font-size: 1.35rem;
    line-height: 1.3;
  }
  
  .title-link {
    color: inherit;
    text-decoration: none;
    transition: color 0.2s ease;
  }
  
  .title-link:hover {
    color: var(--terminal-green);
  }
  
  .post-date {
    color: var(--date-color);
    font-size: 0.9em;
    margin-bottom: 10px;
    background-color: var(--date-bg);
    display: inline-block;
    padding: 2px 6px;
    border-radius: 3px;
  }
  
  .post-content {
    line-height: 1.5;
    margin-bottom: 10px;
  }
  
  .post-link {
    color: var(--link-color);
    font-size: 0.9em;
    display: flex;
    align-items: center;
  }
  
  .arrow {
    color: var(--command-color);
    margin: 0 8px;
  }
  
  .read-link {
    background-color: rgba(12, 143, 32, 0.8);
    padding: 2px 8px;
    border-radius: 3px;
    font-size: 0.9em;
    font-weight: bold;
    color: #fff;
    transition: all 0.2s ease;
    box-shadow: 0 1px 2px rgba(0,0,0,0.1);
  }
  
  .read-link:hover {
    background-color: var(--terminal-blue);
    transform: translateY(-1px);
    box-shadow: 0 2px 5px rgba(0,0,0,0.15);
  }
</style>